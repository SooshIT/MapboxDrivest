<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theory_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/theoryQuizTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theory_quiz_title"
            android:textColor="@color/theory_text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theoryQuizProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/theory_quiz_progress_default"
            android:textColor="@color/theory_accent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theoryQuizQuestionPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@color/theory_text_primary"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/theoryQuizOptionsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/theoryQuizOptionA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theory_accent"
                android:textColor="@color/theory_text_primary" />

            <RadioButton
                android:id="@+id/theoryQuizOptionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theory_accent"
                android:textColor="@color/theory_text_primary" />

            <RadioButton
                android:id="@+id/theoryQuizOptionC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theory_accent"
                android:textColor="@color/theory_text_primary" />

            <RadioButton
                android:id="@+id/theoryQuizOptionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/theory_accent"
                android:textColor="@color/theory_text_primary" />
        </RadioGroup>

        <TextView
            android:id="@+id/theoryQuizFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/theory_text_secondary"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/theoryQuizBookmarkButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/theory_bookmark_question"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/theoryQuizSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/theory_submit_answer"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/theoryQuizNextButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/theory_next_question"
            android:textAllCaps="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/theoryQuizSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/theory_text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
