<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/theoryLessonTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111827"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theoryLessonContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#374151"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/theoryLessonKeyPointsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/theory_key_points_heading"
            android:textColor="#111827"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theoryLessonKeyPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#374151"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/theoryLessonCompleteButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="18dp"
            android:text="@string/theory_mark_lesson_complete"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
