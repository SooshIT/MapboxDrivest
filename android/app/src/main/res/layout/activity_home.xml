<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/homeSettingsButton"
        android:layout_width="@dimen/home_settings_button_size"
        android:layout_height="@dimen/home_settings_button_size"
        android:background="@drawable/bg_map_control_chip"
        android:contentDescription="@string/settings_title"
        android:elevation="7dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:tint="@color/map_control_settings_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_gear" />

    <ImageView
        android:id="@+id/homeLogo"
        android:layout_width="@dimen/logo_size_home"
        android:layout_height="@dimen/logo_size_home"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/drivest_logo_content_description"
        android:src="@drawable/drivest_logo_tight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/home_subtitle"
        android:textColor="#4B5563"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeLogo" />

    <TextView
        android:id="@+id/homeDriverModeValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/home_driver_mode_default"
        android:textColor="#111827"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeSubtitle" />

    <TextView
        android:id="@+id/homeConfidenceValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/home_confidence_score_default"
        android:textColor="#0F766E"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeDriverModeValue" />

    <TextView
        android:id="@+id/homeRecommendedLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/home_recommended_today_label"
        android:textColor="#1D4ED8"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeConfidenceValue" />

    <TextView
        android:id="@+id/homeRecommendedValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="#111827"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeRecommendedLabel" />

    <LinearLayout
        android:id="@+id/homeModeRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeRecommendedValue">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/practiceModeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/home_practice_button"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/ic_menu_myplaces"
                app:iconGravity="textTop"
                app:iconPadding="8dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/navigationModeButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/home_navigation_button"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/ic_menu_directions"
                app:iconGravity="textTop"
                app:iconPadding="8dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/homeTheoryTileContainer"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/theoryModeButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/home_theory_button"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/ic_menu_info_details"
                app:iconGravity="textTop"
                app:iconPadding="8dp" />

            <TextView
                android:id="@+id/homeTheoryProgressBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#DCFCE7"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                android:text="@string/home_theory_progress_default"
                android:textColor="#166534"
                android:textSize="11sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/homeTheoryReadinessValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/home_theory_readiness_default"
        android:textColor="#1D4ED8"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeModeRow" />

</androidx.constraintlayout.widget.ConstraintLayout>
