<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_surface"
    android:padding="20dp">

    <!-- Progress Header -->
    <LinearLayout
        android:id="@+id/quizPlayProgressHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/quizPlayProgressText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quiz_play_question_of"
            android:textColor="@color/theory_text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quizPlayTimerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/settings_accent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Party Player Banner (hidden for solo) -->
    <com.google.android.material.chip.Chip
        android:id="@+id/quizPlayPlayerChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/theory_text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quizPlayProgressHeader"
        android:visibility="gone" />

    <!-- Question Card -->
    <LinearLayout
        android:id="@+id/quizPlayQuestionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_theory_panel"
        android:elevation="3dp"
        android:outlineProvider="background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quizPlayPlayerChip">

        <TextView
            android:id="@+id/quizPlayQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theory_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- Answer Buttons Container -->
    <LinearLayout
        android:id="@+id/quizPlayAnswersContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quizPlayQuestionCard">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quizPlayAnswer0"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quizPlayAnswer1"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quizPlayAnswer2"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quizPlayAnswer3"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Explanation Card (hidden until answer submitted) -->
    <LinearLayout
        android:id="@+id/quizPlayExplanationCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_theory_panel"
        android:elevation="3dp"
        android:outlineProvider="background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quizPlayAnswersContainer"
        android:visibility="gone">

        <TextView
            android:id="@+id/quizPlayExplanationLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_play_explanation_label"
            android:textColor="@color/settings_accent"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quizPlayExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/theory_text_primary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/quizPlayNextButton"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/quiz_play_next"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>
