<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_settings_page"
    android:clipToPadding="false"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingEnd="16dp"
        android:paddingBottom="28dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_settings_hero"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/settingsLogo"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:contentDescription="@string/drivest_logo_content_description"
                    android:src="@drawable/drivest_logo_tight" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settingsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_title"
                        android:textColor="@android:color/white"
                        android:textSize="31sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/settings_subtitle"
                        android:textColor="#E0EEFF"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/settingsSectionProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/settings_section_profile"
            android:textAllCaps="true"
            android:textColor="@color/settings_text_secondary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/settings_card_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/settings_card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/settingsDriverModeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_driver_mode_default"
                    android:textColor="@color/settings_accent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/settingsDriverModeHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_driver_mode_heading"
                    android:textColor="@color/settings_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/driverModeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/driverModeLearnerRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/driver_mode_learner"
                        android:textColor="@color/settings_text_primary" />

                    <RadioButton
                        android:id="@+id/driverModeNewDriverRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/driver_mode_new_driver"
                        android:textColor="@color/settings_text_primary" />

                    <RadioButton
                        android:id="@+id/driverModeStandardRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/driver_mode_standard"
                        android:textColor="@color/settings_text_primary" />
                </RadioGroup>

                <TextView
                    android:id="@+id/settingsDriverModeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_settings_info_chip"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="10dp"
                    android:text="@string/settings_driver_mode_desc_learner"
                    android:textColor="#D7EBFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/settingsConfidenceValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/settings_confidence_score_default"
                    android:textColor="@color/settings_text_primary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/settingsSubscriptionValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_subscription_value_default"
                    android:textColor="@color/settings_text_secondary"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/paymentsSubscriptionsButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/settings_payments_subscriptions"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/settingsSectionNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/settings_section_navigation"
            android:textAllCaps="true"
            android:textColor="@color/settings_text_secondary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/settings_card_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/settings_card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/settingsVoiceHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_voice_mode"
                    android:textColor="@color/settings_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/voiceModeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/voiceModeAllRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/settings_voice_all"
                        android:textColor="@color/settings_text_primary" />

                    <RadioButton
                        android:id="@+id/voiceModeAlertsRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/settings_voice_alerts"
                        android:textColor="@color/settings_text_primary" />

                    <RadioButton
                        android:id="@+id/voiceModeMuteRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/settings_voice_mute"
                        android:textColor="@color/settings_text_primary" />
                </RadioGroup>

                <TextView
                    android:id="@+id/settingsPromptSensitivityHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/settings_prompt_sensitivity"
                    android:textColor="@color/settings_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/promptSensitivityRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/promptSensitivityMinimalRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/settings_prompt_sensitivity_minimal"
                        android:textColor="@color/settings_text_primary" />

                    <RadioButton
                        android:id="@+id/promptSensitivityStandardRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/settings_prompt_sensitivity_standard"
                        android:textColor="@color/settings_text_primary" />

                    <RadioButton
                        android:id="@+id/promptSensitivityExtraHelpRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/settings_prompt_sensitivity_extra_help"
                        android:textColor="@color/settings_text_primary" />
                </RadioGroup>

                <TextView
                    android:id="@+id/settingsUnitsHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/settings_units"
                    android:textColor="@color/settings_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/unitsRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/unitsMphRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/settings_units_mph"
                        android:textColor="@color/settings_text_primary" />

                    <RadioButton
                        android:id="@+id/unitsKmhRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/settings_accent"
                        android:text="@string/settings_units_kmh"
                        android:textColor="@color/settings_text_primary" />
                </RadioGroup>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/lowStressRoutingSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_low_stress_routing"
                    android:textColor="@color/settings_text_primary" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/hazardsEnabledSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_hazards_enabled"
                    android:textColor="@color/settings_text_primary" />

                <TextView
                    android:id="@+id/settingsFreshnessWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_settings_warning_chip"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="10dp"
                    android:text="@string/settings_data_freshness_warning"
                    android:textColor="@color/settings_warning_text"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/settingsSectionPrivacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/settings_section_privacy"
            android:textAllCaps="true"
            android:textColor="@color/settings_text_secondary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/settings_card_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/settings_card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/analyticsSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_analytics_enabled"
                    android:textColor="@color/settings_text_primary" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/notificationsSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_notifications_enabled"
                    android:textColor="@color/settings_text_primary" />

                <TextView
                    android:id="@+id/notificationsStatusValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/settings_notifications_status_enabled"
                    android:textColor="@color/settings_text_muted"
                    android:textSize="13sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dataRightsButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/settings_data_rights"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/settingsSectionLegal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/settings_section_legal"
            android:textAllCaps="true"
            android:textColor="@color/settings_text_secondary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/settings_card_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/settings_card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/termsButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_legal_terms"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/privacyButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_legal_privacy"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/faqButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_legal_faq"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/contentAccuracyButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_legal_content_accuracy"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/serviceAvailabilityButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_legal_service_availability"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/safetyNoticeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_legal_safety_notice"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/theorySettingsButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/theory_settings"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    android:visibility="gone"
                    app:strokeColor="@color/settings_card_stroke" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/settingsSectionSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/settings_section_support"
            android:textAllCaps="true"
            android:textColor="@color/settings_text_secondary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/settings_card_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/settings_card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/contactSupportButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_support_contact"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/aboutDrivestButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_support_about"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/exportDriveLogButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/settings_support_export_drive_log"
                    android:textAllCaps="false"
                    android:textColor="@color/settings_text_primary"
                    app:strokeColor="@color/settings_card_stroke" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/settingsSavedHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="@string/settings_saved_hint"
            android:textColor="@color/settings_text_muted"
            android:textSize="13sp" />
    </LinearLayout>
</ScrollView>
