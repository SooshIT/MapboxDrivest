<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/app_card_bg"
    app:cardCornerRadius="14dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/app_card_stroke"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="@drawable/bg_theory_panel"
            android:padding="8dp">

            <ImageView
                android:id="@+id/trafficSignItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/traffic_signs_sign_image"
                android:scaleType="fitCenter" />
        </FrameLayout>

        <TextView
            android:id="@+id/trafficSignItemCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/theory_text_primary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trafficSignItemMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/theory_text_secondary"
            android:textSize="11sp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
