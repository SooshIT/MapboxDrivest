<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_app_card"
        android:elevation="2dp"
        android:outlineProvider="background"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:id="@+id/theoryMockResultsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theory_mock_results_title"
            android:textColor="@color/theory_text_primary"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theoryMockResultsScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/theory_accent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theoryMockResultsOutcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/theory_text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theoryMockResultsBreakdownHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/theory_mock_breakdown_heading"
            android:textColor="@color/theory_text_primary"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theoryMockResultsBreakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/theory_text_secondary"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/theoryMockResultsReviewWrongButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/theory_review_wrong_answers"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/theoryMockResultsDoneButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/theory_done"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
