<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/theoryTopicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111827"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theoryTopicDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#4B5563"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/theoryTopicLessonsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/theory_lessons_heading"
            android:textColor="#111827"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/theoryTopicLessonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/theoryTopicQuizHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/theory_quiz_length_heading"
            android:textColor="#111827"
            android:textSize="17sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/theoryTopicQuiz10Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/theory_quiz_10"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/theoryTopicQuiz20Button"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/theory_quiz_20"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/theoryTopicQuiz30Button"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/theory_quiz_30"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
